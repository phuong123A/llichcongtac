@model LichCongTacWeb.Models.Leader
@{
    Layout = null; // Không dùng Layout chung để trang đăng nhập gọn gàng
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Đăng nhập hệ thống - Lịch công tác</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <style>
        body {
            background-color: #f4f7f6;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .login-card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            overflow: hidden;
            width: 100%;
            max-width: 400px;
        }
        .login-header {
            background-color: #cc0000; /* Màu đỏ đặc trưng */
            color: white;
            padding: 30px;
            text-align: center;
        }
        .login-header h2 {
            font-size: 1.5rem;
            font-weight: bold;
            text-transform: uppercase;
            margin: 0;
        }
        .btn-login {
            background-color: #cc0000;
            border: none;
            color: white;
            font-weight: bold;
            padding: 12px;
            transition: 0.3s;
        }
        .btn-login:hover {
            background-color: #a30000;
            color: white;
        }
        .form-control:focus {
            border-color: #cc0000;
            box-shadow: 0 0 0 0.25rem rgba(204, 0, 0, 0.25);
        }
    </style>
</head>
<body>

    <div class="login-card bg-white">
        <div class="login-header">
            <i class="fas fa-user-tie fa-3x mb-3"></i>
            <h2>Lãnh đạo đăng nhập</h2>
        </div>
        <div class="card-body p-4">
            <form asp-controller="Account" asp-action="Login" method="post">
                @Html.AntiForgeryToken() <div class="mb-3">
                    <label class="form-label fw-bold">Tên đăng nhập</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                        <input type="text" name="username" class="form-control" placeholder="Nhập tài khoản..." required />
                    </div>
                </div>

                <div class="mb-4">
                    <label class="form-label fw-bold">Mật khẩu</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-lock"></i></span>
                        <input type="password" name="password" class="form-control" placeholder="Nhập mật khẩu..." required />
                    </div>
                </div>

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger p-2 text-center" role="alert">
                        <i class="fas fa-exclamation-circle me-2"></i> @ViewBag.Error
                    </div>
                }

                <button type="submit" class="btn btn-login w-100 rounded-pill">
                    <i class="fas fa-sign-in-alt me-2"></i> ĐĂNG NHẬP
                </button>
            </form>
        </div>
        <div class="card-footer bg-light text-center py-3">
            <small class="text-muted">Hệ thống Lịch công tác </small>
        </div>
    </div>

</body>
</html>